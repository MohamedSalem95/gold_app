<div class="columns">

    <div class="column is-2">
        <div class="has-background-light p-2 has-border-radius-10">
            <aside class="menu">
            <p class="menu-label">
                    الاداره
            </p>
            <ul class="menu-list">
                <li><%=  link_to 'الفئات', categories_path %></li>
                <!-- <li><a> فضيات </a></li> -->
                <li> <%=  link_to 'المنتجات', '#', class: 'is-active' %> </li>
            </ul>
        
            </aside>
        </div>
    </div>


    <div class="column">
        <h5 class="title is-5"> جميع المنتجات. <h5>
        <%# link_to 'انشاء منتج.', new_product_path, class: 'has-text-weight-semibold' %>
        <% if @products.any? %>

            <table class="table is-narrow is-stripped is-fullwidth is-hoverable">
                <thead>
                    <th> الاسم </th>
                    <th> الفئه </th>
                    <th> الفئه الفرعيه </th>
                    <th> السعر </th>
                    <th> الخصم </th>
                    <th> العيار </th>
                    <th> الكود </th>
                    <th>  </th>

                </thead>

                <tbody>
                    <% @products.each do |product| %>
                        <tr>
                            <td> <b> <%= product.name %> </b> </td>
                            <td> <%= product.category.name %> </td>
                            <td> <%= product.sub_category.name %> </td>
                            <td> <b> <%= product.price %> </b> </td>
                            <td>
                                <% if product.discount.present? %>
                                    <%= product.discount %> 
                                <% else %>
                                    <b> لا يوجد </b>
                                <% end %>
                            </td>
                            <td> <%= product.gold_type %> </td>
                            <td> <%= product.code %> </td>
                            <td>
                                <%= link_to 'عرض', category_product_path(product.category, product), class: 'button is-small is-outlined has-text-weight-semibold' %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        <% else %>

            <p class="has-text-weight-semibold"> لا يوجد منتجات بعد. <p>

        <% end %>
    </div>
</div>