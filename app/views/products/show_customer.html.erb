<div class="columns">
    <div class="column is-6">
        <Product :images='<%= @product.images.map { |image| rails_blob_path(image.image, only_path: true) } %>'></Product>
    </div>

    <div class="column is-6">
        <h5 class="title is-5 mb-3">
            <%= @product.name %>
            <% if @product.discount.present? %>
                <span class="tag is-success">
                    خصم
                    <%= ((@product.discount / @product.price) * 100).floor %>
                    %
                </span>
            <% end %>
        </h5>

        <p class="has-text-weight-semibold has-text-gray mb-2">
            <%= @product.description %>
        </p>
        <p  class="has-text-weight-bold has-text-gray">
            العيار:
            <%= @product.gold_type %>
        </p>
        <p  class="has-text-weight-bold has-text-gray">
        الكميه المتوفره:
            <% if @product.stock != 0 %>
                <%= @product.stock %>
            <% else %>
                <span class="has-text-danger">
                    غير متوفر
                </span>
            <% end %>
        </p>
        <p  class="has-text-weight-bold has-text-gray">
            الكود:
            <%= @product.code %>
        </p>
        <p class="title is-5 mt-2 ">
        السعر: 
            <% if @product.discount.present? %>
                <span class="has-text-success">
                    <%= @product.price - @product.discount %>
                    جنيه
                </span>
                
                <span class="has-text-grey-light">
                    بدلا من
                    <s> <%= @product.price %> </s>
                </span>

            <% else %>
                <span class="has-text-success">
                    <%= @product.price %>
                    جنيه
                </span>
            <% end %>
        </p>
    </div>
</div>